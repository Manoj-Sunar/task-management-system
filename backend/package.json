{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test:ci": "cross-env NODE_ENV=test USE_MONGODB_MEMORY=true vitest run --coverage --reporter=verbose",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "docker:build": "docker build -t task-management-api .",
    "docker:run": "docker run -p 4000:4000 --env-file .env task-management-api",
    "docker:compose": "docker-compose up",
    "ci:test": "npm run lint && npm run test:ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-request-id": "^3.0.0",
    "express-validator": "^7.3.1",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.11",
    "path": "^0.12.7",
    "prettier": "^3.7.4",
    "redis": "^5.10.0",
    "response-time": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
    "validator": "^13.15.23",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-mongodb": "^7.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "mongodb-memory-server": "^10.4.1",
    "supertest": "^7.1.4",
    "vitest": "^4.0.15"
  }
}
